                    <TextBox    x:Name="Pairs4Hours"   Grid.Row="4" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" PreviewTextInput="CheckForCorrectValues" Width="46" Height="18" Margin="4,10"/>
