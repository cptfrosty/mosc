                    <TextBox    x:Name="Pairs5Hours" Grid.Row="5" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" PreviewTextInput="CheckForCorrectValues" Width="46" Height="18" Margin="4,9,4,10"/>
